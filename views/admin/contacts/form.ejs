<%- include('../../partials/header', { user }) %>

<h2><%= contact ? 'Edit Contact' : 'New Contact' %></h2>
<% if (error) { %>
  <p class="error"><%= error %></p>
<% } %>

<form method="post" action="<%= contact ? '/admin/contacts/' + contact.id + '/edit' : '/admin/contacts/new' %>" class="form">
  <label>Name
    <input type="text" name="name" value="<%= contact ? contact.name : '' %>" required />
  </label>
  <label>Role/Designation
    <input type="text" name="role" value="<%= contact ? contact.role : '' %>" />
  </label>
  <label>Phone
    <input type="tel" name="phone" value="<%= contact ? contact.phone : '' %>" />
  </label>
  <label>Email
    <input type="email" name="email" value="<%= contact ? contact.email : '' %>" />
  </label>
  <button class="btn" type="submit"><%= contact ? 'Update' : 'Create' %></button>
</form>

<%- include('../../partials/footer') %>

